// Firebase Storage Security Rules
// Estas reglas deben configurarse en Firebase Console > Storage > Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de todas las imágenes de menú
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Reglas específicas para imágenes de restaurante
    match /restaurants/{restaurantId}/{allPaths=**} {
      allow read: if true;
      // Solo usuarios autenticados pueden escribir
      allow write: if request.auth != null;
    }
    
    // Reglas para imágenes de menú específicamente
    match /menu-images/{allPaths=**} {
      allow read: if true;
      // Solo usuarios autenticados pueden escribir
      allow write: if request.auth != null;
    }
  }
}
